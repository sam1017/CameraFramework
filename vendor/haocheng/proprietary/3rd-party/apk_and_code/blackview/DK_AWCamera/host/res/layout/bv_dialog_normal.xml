<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="17dp"
    >

    <TextView
        android:id="@+id/bv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/bv_title_color"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/bv_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="24dp"
        android:paddingStart="32dp"
        android:paddingEnd="41dp"
        android:textColor="@color/bv_title_color"
        android:textSize="16sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_line_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginBottom="46dp"
        >

        <TextView
            android:id="@+id/bv_dialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:text="@android:string/cancel"
            android:textSize="16sp"
            android:textColor="@color/track_on_color"
            />

        <View
            android:id="@+id/bv_dialog_divider"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/divider_line_color"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/bv_dialog_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:text="@android:string/ok"
            android:textSize="16sp"
            android:textColor="@color/track_on_color"
            />
    </LinearLayout>

</LinearLayout>
