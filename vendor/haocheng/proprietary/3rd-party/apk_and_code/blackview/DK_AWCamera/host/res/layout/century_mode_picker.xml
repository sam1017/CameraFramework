<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/century_mode_picker_scroller_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- add by huangfei for more mode start -->
    <TextView
        android:id="@+id/more_mode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:drawableRight="@drawable/more_mode_exit"
        android:drawablePadding="8dp"
        android:background="@drawable/more_mode_title_background"
        android:layout_marginBottom="@dimen/more_mode_title_1440px"
        android:textSize="@dimen/hct_shutter_title_size"
        android:textColor="@android:color/white"
        android:visibility="gone">
    </TextView>
    <!-- add by huangfei for more mode end -->
    
    <com.mediatek.camera.ui.shutter.CHorizontalScrollView
        android:id="@+id/century_mode_scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/camera_shutter_title_1440px"/>
    <!--  -->

</RelativeLayout>
