<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recording_root_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.mediatek.camera.common.widget.RotateLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/recording_time_group">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/recording_indicator"/>
            <com.mediatek.camera.common.widget.StrokeTextView
                 android:id="@+id/recording_time"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                 android:layout_marginLeft="4dp"
                android:textSize="20sp"
                 android:textColor="#FFFFFFFF"
                 android:maxLines="1"
                 android:textAppearance="?android:attr/textAppearanceMedium"/>
            <com.mediatek.camera.common.widget.StrokeTextView
                android:id="@+id/recording_fps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="13dp"
                android:textSize="20sp"
                android:textColor="#FFFFFFFF"
                android:maxLines="1"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>
    </com.mediatek.camera.common.widget.RotateLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/video_shutter_root"
        android:layout_marginBottom="@dimen/video_shutter_root_margin_Bottom"
        android:clickable="true">
        <com.mediatek.camera.common.widget.TwoStateScaleAnimationButton
            android:id="@+id/video_stop_shutter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="@dimen/camera_video_stop_margin_Bottom"
            android:clickable="true"
            android:src="@drawable/animated_vector_slowmotion_drawable"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <com.mediatek.camera.common.widget.TwoStateScaleAnimationButton
            android:id="@+id/btn_pause_resume"
            android:layout_height="42dp"
            android:layout_width="42dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/video_stop_shutter"
            android:layout_marginRight="77dp"
            android:clickable="true"
            android:layout_marginBottom="@dimen/camera_video_pause_margin_Bottom"
            android:soundEffectsEnabled="false"
            app:srcCompat="@drawable/ic_pause_recording" />
        <com.mediatek.camera.common.widget.ScaleAnimationButton
            android:id="@+id/btn_vss"
            android:layout_height="42dp"
            android:layout_width="42dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/video_stop_shutter"
            android:layout_marginLeft="77dp"
            android:clickable="true"
            android:layout_marginBottom="@dimen/camera_video_vss_margin_Bottom"
            android:soundEffectsEnabled="false"
            app:srcCompat="@drawable/ic_vss_shutter"/>
        <com.mediatek.camera.common.widget.TwoStateScaleAnimationButton
            android:id="@+id/btn_burst"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/video_stop_shutter"
            android:layout_marginLeft="26dp"
            android:clickable="true"
            android:layout_marginBottom="32dp"
            android:soundEffectsEnabled="false"
            app:srcCompat="@drawable/ic_burst_recording"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recording_size_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/video_shutter_root"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:visibility="visible" >
            <SeekBar
                android:id="@+id/recording_progress"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layoutDirection="ltr"
                android:gravity="center"
                android:focusable="false"
                android:clickable="false"
                android:color="#F19A21"
                android:minHeight="4dp"
                android:maxHeight="4dp"
                android:progressDrawable="@drawable/progress_draw"
                android:thumb="@null"/>
            <com.mediatek.camera.common.widget.RotateStrokeTextView
                android:id="@+id/recording_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/recording_progress"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <com.mediatek.camera.common.widget.RotateStrokeTextView
                android:id="@+id/recording_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/recording_progress"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </RelativeLayout>
</RelativeLayout>
