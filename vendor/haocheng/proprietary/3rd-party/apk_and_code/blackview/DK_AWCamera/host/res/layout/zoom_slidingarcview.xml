<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:id="@+id/zoom_custom_layout"
	android:layout_marginBottom="@dimen/camera_slider_view_margin_bottom"
	android:descendantFocusability="blocksDescendants">
		<com.mediatek.camera.ui.SlidingArcView
			android:id="@+id/zoom_sliding_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="invisible"
			android:layout_centerHorizontal="true"
			android:layout_alignParentBottom="true"
			android:layout_gravity="center"
			/>
		<com.mediatek.camera.ui.CircleTextView
			android:id="@+id/zoom_sliding_value"
			android:layout_width="@dimen/sliding_zoom_view_height"
			android:layout_height="@dimen/sliding_zoom_view_height"
			android:background="@android:color/transparent"
			android:alpha="0.5"
			android:visibility="invisible"
			android:textColor="@android:color/white"
			android:textSize="@dimen/sliding_zoom_text_size"
			android:layout_centerHorizontal="true"
			android:layout_alignParentBottom="true"
			android:gravity="center"
			/>
</RelativeLayout>
