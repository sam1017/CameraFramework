<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/beauty_rotate_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<!-- onekey -->
	<LinearLayout
		android:id="@+id/century_facebeauty_onekey"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:paddingTop="300dp"
		android:layout_marginBottom="@dimen/hct_shutter_layout_height"
		android:splitMotionEvents="false"
		android:visibility="gone"
		android:gravity="bottom|center_horizontal">
		<com.mediatek.camera.ui.CHSeekBar
			android:id="@+id/century_facebeauty_onekey_seekbar"
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:max="100"
			android:maxHeight="1dp"
			android:minHeight="1dp"
			android:paddingTop="30dip"
			android:paddingLeft="4dip"
			android:paddingRight="4dip"
			android:progressDrawable="@drawable/century_chseekbar_style"
			android:thumb="@drawable/century_chseekbar_thumb"
			android:thumbOffset="10.0dp"
			android:focusable="true"/>
	 </LinearLayout>
	
	<!-- custom-->
	<LinearLayout
		android:id="@+id/century_facebeauty_custom"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="@dimen/hct_shutter_layout_height"
		android:gravity="bottom|center_horizontal"
		android:orientation="vertical"
		android:splitMotionEvents="false"
		android:visibility="gone">
		<com.mediatek.camera.ui.CHSeekBar
			android:id="@+id/century_facebeauty_custom_seekbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:max="100"
			android:maxHeight="1dp"
			android:minHeight="1dp"
			android:paddingTop="30dip"
			android:paddingLeft="4dip"
			android:paddingRight="4dip"
			android:progressDrawable="@drawable/century_chseekbar_style"
			android:thumb="@drawable/century_chseekbar_thumb"
			android:visibility="invisible"
			android:thumbOffset="10dp"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				android:clickable="true"
				android:gravity="center">
			<com.mediatek.camera.feature.mode.hctfacebeauty.view.CRotateTextView
				android:id="@+id/century_facebeauty_buffing_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/century_facebeauty_buffing"
				android:textSize="@dimen/century_textsize_medium"
				android:gravity="center"
				android:clickable="true"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:textColor="@drawable/century_text_selector"
				android:drawableTop="@drawable/century_facebeauty_buffing"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/century_facebeauty_whitening_layout"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				android:clickable="true"
			 
				android:gravity="center">
			<com.mediatek.camera.feature.mode.hctfacebeauty.view.CRotateTextView
				android:id="@+id/century_facebeauty_whitening_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/century_facebeauty_whitening"
				android:textSize="@dimen/century_textsize_medium"
				android:gravity="center"
				android:clickable="true"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:textColor="@drawable/century_text_selector"
				android:drawableTop="@drawable/century_facebeauty_whitening"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				android:clickable="true"
				android:gravity="center">
			<com.mediatek.camera.feature.mode.hctfacebeauty.view.CRotateTextView
				android:id="@+id/century_facebeauty_ruddy_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/century_facebeauty_ruddy"
				android:textSize="@dimen/century_textsize_medium"
				android:gravity="center"
				android:clickable="true"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:textColor="@drawable/century_text_selector"
				android:drawableTop="@drawable/century_facebeauty_ruddy"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				android:clickable="true"
				android:gravity="center">
				<com.mediatek.camera.feature.mode.hctfacebeauty.view.CRotateTextView
				android:id="@+id/century_facebeauty_thin_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/century_facebeauty_slimming"
				android:textSize="@dimen/century_textsize_medium"
				android:gravity="center"
				android:clickable="true"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:textColor="@drawable/century_text_selector"
				android:drawableTop="@drawable/century_facebeauty_thin"/>
			</LinearLayout>
		</LinearLayout>
	 </LinearLayout>
	<!-- custom end -->

	<com.mediatek.camera.feature.mode.hctfacebeauty.view.CRotateTextView
        android:id="@+id/century_facebeauty_custom_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="3"  
        android:singleLine="true"  
        android:ellipsize="end"  
        android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/century_shutter_layout_margin_right"
		android:layout_marginBottom="@dimen/century_facebeauty_custom_margin_bottom"
        android:clickable="true"
		android:text="@string/century_facebeauty_custom"
		android:textSize="@dimen/century_textsize_medium"
		android:gravity="center"
		android:textColor="@drawable/century_text_selector"
        android:background="@drawable/century_facebeauty_btn_bg"
		android:padding="2dp"
		android:visibility="invisible"/>
		
	<com.mediatek.camera.feature.mode.hctfacebeauty.view.CRotateTextView
		android:id="@+id/century_facebeauty_onekey_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="3"  
        android:singleLine="true"  
        android:ellipsize="end" 
        android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/century_shutter_layout_margin_right"
		android:layout_marginBottom="@dimen/century_facebeauty_custom_margin_bottom"
		android:layout_above="@+id/century_facebeauty_custom_btn"
        android:clickable="true"
		android:padding="2dp"
 		android:text="@string/century_facebeauty_onekey"
		android:textSize="@dimen/century_textsize_medium"
		android:textColor="@drawable/century_text_selector"
		android:gravity="center"
        android:background="@drawable/century_facebeauty_btn_bg"
		android:visibility="invisible"/>
	 
	<com.mediatek.camera.feature.mode.hctfacebeauty.view.CRotateTextView
        android:id="@+id/century_facebeauty_switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/century_shutter_layout_margin_right"
		android:layout_marginBottom="@dimen/century_facebeauty_switch_margin_bottom"
        android:clickable="true"
		android:focusable="true"
		android:padding="2dp"
		android:text="@string/century_facebeauty_custom"
		android:textSize="@dimen/century_textsize_medium"
		android:textColor="@drawable/century_text_selector"
		android:gravity="center"
        android:background="@drawable/century_facebeauty_btn_bg"
		android:visibility="gone"/>
</RelativeLayout>
