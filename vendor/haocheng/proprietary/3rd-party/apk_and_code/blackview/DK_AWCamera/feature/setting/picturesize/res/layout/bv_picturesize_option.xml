<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true">
    <RelativeLayout
        android:id="@+id/bv_picturesize_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.mediatek.camera.common.widget.RotateImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bv_picturesize1"
            android:contentDescription="@string/accessibility_flash_auto"
            android:src="@drawable/bv_picturesize1"/>
        <!--bv wuyonglin modify for 4:3 picturesize not center from 114dp to 117dp 20200522 start -->
        <com.mediatek.camera.common.widget.RotateImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bv_picturesize2"
            android:layout_marginStart="64dp"
            android:layout_toEndOf="@id/bv_picturesize1"
            android:contentDescription="@string/accessibility_flash_on"
            android:src="@drawable/bv_picturesize2"/>
        <com.mediatek.camera.common.widget.RotateImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bv_picturesize4"
            android:layout_toEndOf="@id/bv_picturesize2"
            android:layout_marginStart="64dp"
            android:contentDescription="@string/accessibility_flash_off"
            android:src="@drawable/bv_picturesize4"/>
        <com.mediatek.camera.common.widget.RotateImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bv_picturesize3"
            android:layout_toEndOf="@id/bv_picturesize4"
            android:layout_marginStart="64dp"
            android:contentDescription="@string/accessibility_flash_off"
            android:src="@drawable/bv_picturesize3"/>
        <!--bv wuyonglin modify for 4:3 picturesize not center from 114dp to 117dp 20200522 end -->
    </RelativeLayout>
</LinearLayout>
