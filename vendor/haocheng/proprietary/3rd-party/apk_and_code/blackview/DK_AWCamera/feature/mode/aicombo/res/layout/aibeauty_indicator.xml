<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aibeauty_indicator"
    style="@style/OnScreenFacebeautyIcon">


    <LinearLayout
        android:id="@+id/effcts_bg"
        style="@style/OnScreenFacebeautyBg"
        android:gravity="center">

        <ScrollView
            android:layout_width="@dimen/picker_button_size"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.mediatek.camera.feature.mode.aicombo.view.widget.RotateImageView
                    android:id="@+id/aibeauty_whiteness"
                    style="@style/OnScreenFacebeautyFixed"
                    android:contentDescription="@string/pref_aibeauty_whiteness_title" />

                <com.mediatek.camera.feature.mode.aicombo.view.widget.RotateImageView
                    android:id="@+id/aibeauty_bright_eyes"
                    style="@style/OnScreenFacebeautyFixed"
                    android:contentDescription="@string/pref_aibeauty_bright_eyes_title" />

                <com.mediatek.camera.feature.mode.aicombo.view.widget.RotateImageView
                    android:id="@+id/aibeauty_slim_face"
                    style="@style/OnScreenFacebeautyFixed"
                    android:contentDescription="@string/pref_aibeauty_slim_face_title" />

                <com.mediatek.camera.feature.mode.aicombo.view.widget.RotateImageView
                    android:id="@+id/aibeauty_smooth"
                    style="@style/OnScreenFacebeautyFixed"
                    android:contentDescription="@string/pref_aibeauty_smooth_title" />
            </LinearLayout>
        </ScrollView>


        <com.mediatek.camera.feature.mode.aicombo.view.widget.VerticalSeekBar
            android:id="@+id/aibeauty_changevalue"
            style="@style/OnScreenAIbeautySeekBar"
            android:layout_marginBottom="3dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:visibility="invisible" />


        <com.mediatek.camera.feature.mode.aicombo.view.widget.RotateImageView
            android:id="@+id/aibeauty_modify"
            style="@style/OnScreenFacebeautyFixed" />
    </LinearLayout>

    <com.mediatek.camera.feature.mode.aicombo.view.widget.RotateImageView
        android:id="@+id/aibeauty_icon"
        style="@style/OnScreenFacebeautyFixed" />

</LinearLayout>
