<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true">
    <RelativeLayout
        android:id="@+id/bv_self_timer_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.mediatek.camera.common.widget.RotateImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bv_self_timer_off"
            android:contentDescription="@string/accessibility_flash_auto"
            android:src="@drawable/bv_self_timer_off"/>
        <com.mediatek.camera.common.widget.RotateImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bv_self_timer_three"
            android:layout_toEndOf="@id/bv_self_timer_off"
            android:layout_marginStart="64dp"
            android:contentDescription="@string/accessibility_flash_on"
            android:src="@drawable/bv_self_timer_three"/>
        <com.mediatek.camera.common.widget.RotateImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bv_self_timer_five"
            android:layout_toEndOf="@id/bv_self_timer_three"
            android:layout_marginStart="64dp"
            android:contentDescription="@string/accessibility_flash_off"
            android:src="@drawable/bv_self_timer_five"/>
        <com.mediatek.camera.common.widget.RotateImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bv_self_timer_ten"
            android:layout_toEndOf="@id/bv_self_timer_five"
            android:layout_marginStart="64dp"
            android:contentDescription="@string/accessibility_flash_off"
            android:src="@drawable/bv_self_timer_ten"/>
    </RelativeLayout>
</LinearLayout>
