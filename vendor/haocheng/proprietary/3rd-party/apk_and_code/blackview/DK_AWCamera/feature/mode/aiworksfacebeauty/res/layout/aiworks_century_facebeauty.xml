<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/beauty_rotate_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<!-- onekey -->
	<LinearLayout
		android:id="@+id/century_facebeauty_onekey"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:paddingTop="300dp"
		android:layout_marginBottom="@dimen/hct_shutter_layout_height"
		android:splitMotionEvents="false"
		android:visibility="gone"
		android:gravity="bottom|center_horizontal">
		<!-- bv wuyonglin modify for adjust custom FaceMode view position 20200303 start -->
		<com.mediatek.camera.ui.CHSeekBar
			android:id="@+id/century_facebeauty_onekey_seekbar"
			android:layout_width="293dp"
			android:layout_height="wrap_content"
			android:max="100"
			android:maxHeight="1.5dp"
			android:minHeight="1.5dp"
			android:paddingTop="28dp"
			android:paddingStart="39dp"
			android:paddingEnd="16dp"
			android:paddingBottom="9dp"
			android:progressDrawable="@drawable/bokeh_seekbar_progress1"
			android:thumb="@drawable/aiworks_chseekbar_thumb"
			android:thumbOffset="10.0dp"
			android:focusable="true"/>
	 </LinearLayout>
	
	<!-- custom-->
	<LinearLayout
		android:id="@+id/century_facebeauty_custom"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="@dimen/century_facebeauty_custom_margin_bottom"
		android:gravity="bottom"
		android:orientation="vertical"
		android:splitMotionEvents="false"
		android:visibility="gone">
		<com.mediatek.camera.ui.CHSeekBar
			android:id="@+id/century_facebeauty_custom_seekbar"
			android:layout_width="293dp"
			android:layout_height="wrap_content"
			android:max="100"
			android:maxHeight="1.5dp"
			android:minHeight="1.5dp"
			android:paddingTop="28dp"
			android:paddingStart="39dp"
			android:paddingEnd="16dp"
			android:paddingBottom="26.5dp"
			android:progressDrawable="@drawable/facebeauty_seekbar_progress1"
			android:thumb="@drawable/aiworks_chseekbar_thumb"
			android:visibility="invisible"
			android:thumbOffset="10dp"/>
		<!-- bv wuyonglin modify for adjust custom FaceMode view position 20200303 end -->

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="9dp"
            android:layout_marginTop="@dimen/aiworks_horizontal_scroll_view_margin_top"
            android:scrollbars="none">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<LinearLayout
				android:layout_width="78dp"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:clickable="true"
				android:gravity="center">
			<com.mediatek.camera.feature.mode.aiworksfacebeauty.view.CRotateTextView
				android:id="@+id/aiworks_facebeauty_buffing_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/century_facebeauty_buffing"
				android:textSize="@dimen/aiworks_textsize_medium"
				android:gravity="center"
				android:clickable="true"
				android:singleLine="true"
				android:paddingTop="4dp"
				android:paddingBottom="6dp"
				android:paddingStart="5dp"
				android:paddingEnd="5dp"
				android:textColor="@drawable/aiworks_text_selector"
				android:drawableTop="@drawable/aiworks_facebeauty_buffing"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="78dp"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:clickable="true"
			 
				android:gravity="center">
			<com.mediatek.camera.feature.mode.aiworksfacebeauty.view.CRotateTextView
				android:id="@+id/aiworks_facebeauty_whitening_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/century_facebeauty_whitening"
				android:textSize="@dimen/aiworks_textsize_medium"
				android:gravity="center"
				android:clickable="true"
				android:singleLine="true"
				android:paddingTop="4dp"
				android:paddingBottom="6dp"
				android:paddingStart="5dp"
				android:paddingEnd="5dp"
				android:textColor="@drawable/aiworks_text_selector"
				android:drawableTop="@drawable/aiworks_facebeauty_whitening"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="78dp"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:clickable="true"
				android:gravity="center">
				<com.mediatek.camera.feature.mode.aiworksfacebeauty.view.CRotateTextView
				android:id="@+id/aiworks_facebeauty_thin_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/century_facebeauty_slimming"
				android:textSize="@dimen/aiworks_textsize_medium"
				android:gravity="center"
				android:clickable="true"
				android:singleLine="true"
				android:paddingTop="4dp"
				android:paddingBottom="6dp"
				android:paddingStart="5dp"
				android:paddingEnd="5dp"
				android:textColor="@drawable/aiworks_text_selector"
				android:drawableTop="@drawable/aiworks_facebeauty_thin"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="78dp"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:clickable="true"
				android:gravity="center">
			<com.mediatek.camera.feature.mode.aiworksfacebeauty.view.CRotateTextView
				android:id="@+id/aiworks_facebeauty_big_eye_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/century_facebeauty_big_eye"
				android:textSize="@dimen/aiworks_textsize_medium"
				android:gravity="center"
				android:clickable="true"
				android:singleLine="true"
				android:paddingTop="4dp"
				android:paddingBottom="6dp"
				android:paddingStart="5dp"
				android:paddingEnd="5dp"
				android:textColor="@drawable/aiworks_text_selector"
				android:drawableTop="@drawable/aiworks_facebeauty_big_eye"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="78dp"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:clickable="true"
				android:gravity="center">
			<com.mediatek.camera.feature.mode.aiworksfacebeauty.view.CRotateTextView
				android:id="@+id/aiworks_facebeauty_bright_eye_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/century_facebeauty_bright_eye"
				android:textSize="@dimen/aiworks_textsize_medium"
				android:gravity="center"
				android:clickable="true"
				android:singleLine="true"
				android:paddingTop="4dp"
				android:paddingBottom="6dp"
				android:paddingStart="5dp"
				android:paddingEnd="5dp"
				android:textColor="@drawable/aiworks_text_selector"
				android:drawableTop="@drawable/aiworks_facebeauty_bright_eye"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="78dp"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:clickable="true"
				android:gravity="center">
			<com.mediatek.camera.feature.mode.aiworksfacebeauty.view.CRotateTextView
				android:id="@+id/aiworks_facebeauty_big_nose_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/century_facebeauty_big_nose"
				android:textSize="@dimen/aiworks_textsize_medium"
				android:gravity="center"
				android:clickable="true"
				android:singleLine="true"
				android:paddingTop="4dp"
				android:paddingBottom="6dp"
				android:paddingStart="5dp"
				android:paddingEnd="5dp"
				android:textColor="@drawable/aiworks_text_selector"
				android:drawableTop="@drawable/aiworks_facebeauty_big_nose"/>
			</LinearLayout>
		</LinearLayout>
	</HorizontalScrollView>
	 </LinearLayout>
	<!-- custom end -->

                <com.mediatek.camera.common.widget.RotateImageView
                    android:id="@+id/aiworks_facebeauty_custom_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/aiworks_facebeauty_custom_margin_bottom"
                    android:layout_marginEnd="@dimen/aiworks_shutter_layout_margin_right"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:focusable="false"
                    android:visibility="invisible"
                    android:src="@drawable/aiworks_facebeauty_custom"/>

                <com.mediatek.camera.common.widget.RotateImageView
                    android:id="@+id/aiworks_facebeauty_onekey_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/aiworks_facebeauty_custom_margin_bottom"
                    android:layout_marginEnd="@dimen/aiworks_shutter_layout_margin_right"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:focusable="false"
                    android:visibility="invisible"
                    android:layout_above="@+id/aiworks_facebeauty_custom_btn"
                    android:src="@drawable/aiworks_facebeauty_onekey"/>
	 
	<com.mediatek.camera.feature.mode.aiworksfacebeauty.view.CRotateTextView
        android:id="@+id/century_facebeauty_switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
		android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/aiworks_shutter_layout_margin_right"
		android:layout_marginBottom="@dimen/century_facebeauty_switch_margin_bottom"
        android:clickable="true"
		android:focusable="true"
		android:padding="2dp"
		android:text="@string/century_facebeauty_custom"
		android:textSize="@dimen/aiworks_textsize_medium"
		android:textColor="@drawable/aiworks_text_selector"
		android:gravity="center"
        android:background="@drawable/century_facebeauty_btn_bg"
		android:visibility="gone"/>

                <com.mediatek.camera.common.widget.RotateImageView
                    android:id="@+id/aiworks_beauty_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/aiworks_facebeauty_custom_margin_bottom"
                    android:layout_marginEnd="@dimen/aiworks_shutter_layout_margin_right"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:focusable="false"
                    android:visibility="gone"
                    android:src="@drawable/aiworks_beatuty_onekey_expand"/>
</RelativeLayout>
